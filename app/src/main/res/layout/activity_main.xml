<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/card_view"
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:background="@drawable/card_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logo_inter"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:background="@drawable/logo_inter"
        app:layout_constraintBottom_toBottomOf="@+id/card_view"
        app:layout_constraintEnd_toEndOf="@+id/card_view"
        app:layout_constraintHorizontal_bias="0.891"
        app:layout_constraintStart_toStartOf="@+id/card_view"
        app:layout_constraintTop_toTopOf="@+id/card_view"
        app:layout_constraintVertical_bias="0.098" />

    <ImageView
        android:id="@+id/logo_mastercard"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:background="@drawable/logo_mastercard"
        app:layout_constraintBottom_toBottomOf="@+id/card_view"
        app:layout_constraintEnd_toEndOf="@+id/card_view"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="@+id/card_view"
        app:layout_constraintTop_toTopOf="@+id/logo_inter"
        app:layout_constraintVertical_bias="0.881" />

    <ImageView
        android:id="@+id/chip"
        android:layout_width="35dp"
        android:layout_height="28dp"
        android:background="@drawable/chip_cartao"
        app:layout_constraintBottom_toTopOf="@+id/logo_mastercard"
        app:layout_constraintEnd_toEndOf="@+id/card_view"
        app:layout_constraintHorizontal_bias="0.905"
        app:layout_constraintStart_toStartOf="@+id/card_view"
        app:layout_constraintTop_toTopOf="@+id/logo_inter"
        app:layout_constraintVertical_bias="0.627" />

    <EditText
        android:id="@+id/nome"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="@string/nome"
        android:inputType="textCapCharacters"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/card_view"
        app:layout_constraintEnd_toEndOf="@+id/card_view"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="@+id/card_view"
        app:layout_constraintTop_toTopOf="@+id/card_view"
        app:layout_constraintVertical_bias="0.31" />

    <EditText
        android:id="@+id/numero_cartao"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="@string/numero_cartao"
        android:inputType="number"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/card_view"
        app:layout_constraintEnd_toEndOf="@+id/card_view"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="@+id/card_view"
        app:layout_constraintTop_toTopOf="@+id/nome"
        app:layout_constraintVertical_bias="0.263"
        android:maxLength="19"/>

    <TextView
        android:id="@+id/cvc_tv"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:text="@string/cvc"
        android:textColor="@color/white"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/card_view"
        app:layout_constraintEnd_toEndOf="@+id/card_view"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="@+id/card_view"
        app:layout_constraintTop_toBottomOf="@+id/numero_cartao"
        app:layout_constraintVertical_bias="0.166" />

    <TextView
        android:id="@+id/validade_tv"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="@string/validade"
        android:textColor="@color/white"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/card_view"
        app:layout_constraintEnd_toEndOf="@+id/card_view"
        app:layout_constraintHorizontal_bias="0.206"
        app:layout_constraintStart_toStartOf="@+id/cvc_tv"
        app:layout_constraintTop_toBottomOf="@+id/numero_cartao"
        app:layout_constraintVertical_bias="0.166" />

    <EditText
        android:id="@+id/cvc_field"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="@string/cvc_field"
        android:inputType="number"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/card_view"
        app:layout_constraintEnd_toEndOf="@+id/card_view"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="@+id/card_view"
        app:layout_constraintTop_toTopOf="@+id/cvc_tv"
        app:layout_constraintVertical_bias="0.444"
        android:maxLength="3"/>

    <EditText
        android:id="@+id/validade_field"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="@string/validade_field"
        android:inputType="number"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/card_view"
        app:layout_constraintEnd_toEndOf="@+id/card_view"
        app:layout_constraintHorizontal_bias="0.206"
        app:layout_constraintStart_toStartOf="@+id/cvc_tv"
        app:layout_constraintTop_toTopOf="@+id/validade_tv"
        app:layout_constraintVertical_bias="0.444"
        android:maxLength="5"/>

</androidx.constraintlayout.widget.ConstraintLayout>